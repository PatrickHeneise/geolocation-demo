    <div class="container">
    
      

      <div id='map' style='width:768px;height:400px;'></div>
<script>
  $(document).ready(function() {
    var self = this;
    var map = mapbox.map('map');
    map.addLayer(mapbox.layer().id('patrickheneise.map-gtuym7hj'));
    map.zoom(2).center({ lat: 40.726446, lon: -74.00528 });
    var markerLayer = mapbox.markers.layer();
    mapbox.markers.interaction(markerLayer);
    map.addLayer(markerLayer);
    map.ui.zoomer.add();
    markerLayer.url('http://localhost:3000/tweets', function() {})
    var interaction = mapbox.markers.interaction(markerLayer);
    interaction.formatter(function(feature) {
            var o = '<h2>'+feature.properties.user + '</h2>' +
                '<p>' + feature.properties.text + '</p>';
            return o;
        });
  });
</script>

